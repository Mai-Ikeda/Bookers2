    <!-- ログインユーザー -->
    <h2>User info</h2>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image,size:"100x100" %>
    <% else %>
      <%= image_tag 'no_image',size:"100x100" %>
    <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

<!-- 編集ボタン -->
    <div class="row">
      <%= link_to edit_user_path(user), type:"button",class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

<!-- 新規投稿フォーム -->
      <h2 class="mt-3">New book</h2>

      <%= form_with model: book do |f| %>
        <div class="form_group mb-3">
          <label for="book-title">Title</label><br>
            <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form_group mb-3">
          <label for="book-opinion">Opinion</label><br>
            <%= f.text_area :body, rows:2, class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>