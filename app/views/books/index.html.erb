<div class="container mx-auto px-5 px-sm-0">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %>errors prohibited this user from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/side', book:@book, user:@user %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th><div class="float-left">Title</div></th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <% if @user.profile_image.attached? %>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag @user.profile_image,size:"80x80" %>
                <% end %>
              <% else %>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag 'no_image',size:"80x80" %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>