<div class="container mx-auto px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">

      <%= render 'books/side', book:@book, user:current_user %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image,size:"80x80" %>
              <% else %>
                <%= image_tag 'no_image',size:"80x80" %>
              <% end %>
            </td>
            <td><%= user.name %></th>
            <td><%= link_to "Show", user_path(user) %></th>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>